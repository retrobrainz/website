{
  "name": "website",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://github.com/retrobrainz/website#readme",
  "bugs": {
    "url": "https://github.com/retrobrainz/website/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/retrobrainz/website.git"
  },
  "funding": "https://github.com/sponsors/retrobrainz",
  "license": "AGPL-3.0-only",
  "author": {
    "name": "Guo Yunhe",
    "email": "i@guoyunhe.me"
  },
  "type": "module",
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#tests/*": "./tests/*.js",
    "#start/*": "./start/*.js",
    "#config/*": "./config/*.js"
  },
  "scripts": {
    "build": "node ace build",
    "ci:eslint": "eslint -f json src -o ./.ci/eslint.json",
    "dev": "node ace serve --hmr",
    "format": "prettier --write .",
    "lint": "eslint . && stylelint --allow-empty-input \"**/*.{css,less,scss}\"",
    "lint:fix": "prettier --write . && eslint --fix . && stylelint --allow-empty-input --fix \"**/*.{css,less,scss}\"",
    "prepare": "husky",
    "start": "node bin/server.js",
    "test": "node ace test",
    "typecheck": "tsc --noEmit"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{cjs,cts,js,jsx,mjs,mts,ts,tsx,vue}": "eslint --fix",
    "*.{css,less,scss}": "stylelint --fix",
    "*.{cjs,css,cts,html,js,json,jsx,less,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}": "prettier --write"
  },
  "prettier": "prettier-config-ali",
  "stylelint": {
    "extends": [
      "stylelint-config-ali",
      "stylelint-prettier/recommended"
    ]
  },
  "dependencies": {
    "@adonisjs/auth": "^9.5.1",
    "@adonisjs/core": "^6.19.3",
    "@adonisjs/drive": "^3.4.1",
    "@adonisjs/i18n": "^2.2.3",
    "@adonisjs/lucid": "^21.8.2",
    "@adonisjs/static": "^1.1.1",
    "@adonisjs/vite": "^4.0.0",
    "@ant-design/icons": "^6.1.0",
    "@guoyunhe/downloader": "^1.3.0",
    "@guoyunhe/sleep": "^1.0.0",
    "@retrobrainz/dat": "^1.1.0",
    "@retrobrainz/name": "^1.2.1",
    "@vinejs/vine": "^4.2.0",
    "antd": "^6.2.1",
    "antd-moe": "^1.0.0",
    "chalk": "^5.6.2",
    "edge.js": "^6.4.0",
    "i18next": "^25.8.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-fetch-backend": "^7.0.0",
    "image-dimensions": "^2.5.0",
    "image-type": "^6.0.0",
    "luxon": "^3.7.2",
    "pg": "^8.17.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-fast-fetch": "^2.0.1",
    "react-i18next": "^16.5.3",
    "reflect-metadata": "^0.2.2",
    "sharp": "^0.34.5",
    "wouter": "^3.9.0",
    "xior": "^0.8.3"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.1.2",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@japa/assert": "^4.2.0",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.5.0",
    "@swc/core": "1.11.24",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.19.7",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "eslint": "^9.39.2",
    "eslint-config-ali": "^16.6.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "hot-hook": "^0.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "prettier-config-ali": "^1.5.0",
    "robloach-datfile": "^2.4.1",
    "stylelint": "^16.26.1",
    "stylelint-config-ali": "^2.3.0",
    "stylelint-prettier": "^5.0.3",
    "ts-node-maintained": "^10.9.6",
    "typescript": "~5.8.3",
    "vite": "^6.4.1"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  }
}
